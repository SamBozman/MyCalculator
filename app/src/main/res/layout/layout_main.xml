<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.coop.keybusters.mycalculator.MainActivity">


    <TextView
        android:id="@+id/tv_formula"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:fontFamily="sans-serif-light"
        android:gravity="end|bottom"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="20sp"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="40sp"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline3"
        app:layout_constraintVertical_bias="1.0"
        tools:text="0" />

    <TextView
        android:id="@+id/tv_fraction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical|start|center"
        android:maxLines="1"
        android:text="@string/_32_64"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_TBA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/guideline3" />

    <Button
        android:id="@+id/b_difract"
        style="@style/CalcButtons"
        android:text="@string/d_f"
        android:textAllCaps="false"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_modulo"
        app:layout_constraintEnd_toStartOf="@+id/b_numerator"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/b_numerator"
        style="@style/CalcButtons"
        android:text="@string/num"
        android:textAllCaps="false"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_power"
        app:layout_constraintEnd_toStartOf="@+id/b_denominator"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b_difract"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/b_denominator"
        style="@style/CalcButtons"
        android:text="@string/den"
        android:textAllCaps="false"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_root"
        app:layout_constraintEnd_toStartOf="@+id/b_TBA"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b_numerator"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <Button
        android:id="@+id/b_TBA"
        style="@style/CalcButtons"
        android:text="?"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b_denominator"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />


    <Button
        android:id="@+id/b_modulo"
        style="@style/CalcButtons"
        android:text="@string/mod"
        android:textAllCaps="false"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b7"
        app:layout_constraintEnd_toStartOf="@+id/b_power"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_difract" />

    <Button
        android:id="@+id/b_power"
        style="@style/CalcButtons"
        android:text="@string/power"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b8"
        app:layout_constraintEnd_toStartOf="@+id/b_root"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b_modulo"
        app:layout_constraintTop_toBottomOf="@+id/b_numerator" />

    <Button
        android:id="@+id/b_root"
        style="@style/CalcButtons"
        android:text="@string/root"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b9"
        app:layout_constraintEnd_toStartOf="@+id/b_clear"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b_power"
        app:layout_constraintTop_toBottomOf="@+id/b_denominator" />

    <Button
        android:id="@+id/b_clear"
        style="@style/CalcButtons"
        android:text="@string/clear"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_divide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b_root"
        app:layout_constraintTop_toBottomOf="@+id/b_TBA" />

    <Button
        android:id="@+id/b7"
        style="@style/CalcButtons"
        android:text="@string/_7"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b4"
        app:layout_constraintEnd_toStartOf="@+id/b8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_modulo" />

    <Button
        android:id="@+id/b8"
        style="@style/CalcButtons"
        android:text="@string/_8"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b5"
        app:layout_constraintEnd_toStartOf="@+id/b9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b7"
        app:layout_constraintTop_toBottomOf="@+id/b_power" />

    <Button
        android:id="@+id/b9"
        style="@style/CalcButtons"
        android:text="@string/_9"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b6"
        app:layout_constraintEnd_toStartOf="@+id/b_divide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b8"
        app:layout_constraintTop_toBottomOf="@+id/b_root" />

    <Button
        android:id="@+id/b_divide"
        style="@style/CalcButtons"
        android:text="@string/divide"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b9"
        app:layout_constraintTop_toBottomOf="@+id/b_clear" />


    <Button
        android:id="@+id/b4"
        style="@style/CalcButtons"
        android:text="@string/_4"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintEnd_toStartOf="@+id/b5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b5"
        style="@style/CalcButtons"
        android:text="@string/_5"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintEnd_toStartOf="@+id/b6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b4"
        app:layout_constraintTop_toBottomOf="@+id/b8" />

    <Button
        android:id="@+id/b6"
        style="@style/CalcButtons"
        android:text="@string/_6"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintEnd_toStartOf="@+id/b_multiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b5"
        app:layout_constraintTop_toBottomOf="@+id/b9" />

    <Button
        android:id="@+id/b_multiply"
        style="@style/CalcButtons"
        android:text="@string/multiply"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b6"
        app:layout_constraintTop_toBottomOf="@+id/b_divide" />

    <Button
        android:id="@+id/b1"
        style="@style/CalcButtons"
        android:text="@string/_1"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b0"
        app:layout_constraintEnd_toStartOf="@+id/b2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <Button
        android:id="@+id/b2"
        style="@style/CalcButtons"
        android:text="@string/_2"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_decimal"
        app:layout_constraintEnd_toStartOf="@+id/b3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/b5" />

    <Button
        android:id="@+id/b3"
        style="@style/CalcButtons"
        android:text="@string/_3"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_equals"
        app:layout_constraintEnd_toStartOf="@+id/b_minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/b6" />

    <Button
        android:id="@+id/b_minus"
        style="@style/CalcButtons"
        android:text="@string/subtract"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toTopOf="@+id/b_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b3"
        app:layout_constraintTop_toBottomOf="@+id/b_multiply" />


    <Button
        android:id="@+id/b0"
        style="@style/CalcButtons"
        android:text="@string/_0"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b_decimal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/b_decimal"
        style="@style/CalcButtons"
        android:text="@string/decimal"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b_equals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b0"
        app:layout_constraintTop_toBottomOf="@+id/b2" />

    <Button
        android:id="@+id/b_equals"
        style="@style/CalcButtons"
        android:text="@string/equals"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b_plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b_decimal"
        app:layout_constraintTop_toBottomOf="@+id/b3" />

    <Button
        android:id="@+id/b_plus"
        style="@style/CalcButtons"
        android:text="@string/add"
        android:onClick="buttonHandler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/b_equals"
        app:layout_constraintTop_toBottomOf="@+id/b_minus" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

</android.support.constraint.ConstraintLayout>
